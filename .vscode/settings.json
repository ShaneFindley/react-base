{
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.formatOnSave": true,
  "editor.rulers": [100],
  "editor.tabSize": 2,
  "editor.detectIndentation": false,

  "eslint.packageManager": "yarn",
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.run": "onSave",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "prettier.configPath": "server/sonar-web/.prettierrc",

  "npm.packageManager": "yarn",

  "jest.jestCommandLine": "yarn test",
  "jest.rootPath": "server/sonar-web",
  "jest.autoRun": "off",
  "jest.coverageFormatter": "GutterFormatter",
  "jest.showCoverageOnLoad": true,


  "tailwindCSS.experimental.configFile": "server/sonar-web/tailwind-webapp.config.js",

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.associations": {
    "*.js": "javascript",
    "*.snap": "html"
  },
  "files.exclude": {
    "**/.awcache": true,
    "**/.cache": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.gradle": true,
    "**/.hg": true,
    "**/.sonarlint": true,
    "**/.svn": true,
    "**/.vscode": true,
    "**/eslint-report.json": true,
    "**/bower_components": true,
    "**/build": true,
    "**/CVS": true,
    "**/node": true,
    "**/node_modules": true,
    "**/out": true,
    "**/coverage": true,
    "**/target": true
  },

  "search.exclude": {
    "**/build": true,
    "**/target": true,
    "**/.awcache": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.sonarlint": true,
    "**/flow-typed": true,
    "**/yarn.lock": true,
    "**/coverage": true,
    "**/*.js.snap": true,
    "**/*.jsx.snap": true,
    "**/*.ts.snap": true,
    "**/*.tsx.snap": true
  },

  "javascript.format.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.updateImportsOnFileMove.enabled": "always",

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "sonarlint.connectedMode.project": {
    "connectionId": "SonarCloud",
    "projectKey": "SonarSource_sonarcloud-core"
  }

  /* Move the sonarcloud connection to your user settings

  "sonarlint.ls.javaHome": "/your/path/to/java",
  "sonarlint.connectedMode.connections.sonarcloud": [
    {
      "connectionId": "SonarCloud",
      "organizationKey": "sonarsource",
      "token": "your-token"
    }
  ],
  */
}
